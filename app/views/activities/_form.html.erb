<!--<div class="container">-->
  <%= form_with(model: activity, local: true) do |form| %>
    <% if activity.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

        <ul>
        <% activity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="row">
        <div class="col-md-4 white-text justify-content-right"><%= form.label :date %></div>
        <div class="col-md-8 justify-content-left"><%= form.date_field :date %></div>
    </div>
      
    <div class="row mt-3">
        <div class="col-md-4 white-text justify-content-right"><%= form.label :workout %></div>
        <div class="col-md-8 justify-content-left"><%= collection_select(:activity, :workout_id, Workout.all.sort { |a, b| a.name <=> b.name }, :id, :name, {}, { :multiple => false }) %></div>
    </div>
    
    <div class="row mt-3 pb-2">
        <div class="col-md-4 white-text"><%= form.label :duration %></div>
        <div class="col-md-8 white-text"><%= form.number_field :duration %> minutes</div>
    </div>

    <div class="actions mt-3 mb-3">
      <%= form.submit class: "btn login-button" %>
    </div>
  <% end %>
