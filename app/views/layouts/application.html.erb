<!DOCTYPE html>
<html>
  <head>
    <title>MoveAndGroove</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    <script src="https://kit.fontawesome.com/e1ae36054d.js" crossorigin="anonymous"></script>

  </head>

  <body>

    <nav class="navbar navbar-expand-md navbar-light bg-light">
      <a class="navbar-brand brand-text" href="/"><strong>Move & Groove</strong></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="btn btn-info mx-1"><%= link_to('Record Workout', new_activity_path, class: "button-link-color") %></li>
              <li class="btn btn-info mx-1"><%= link_to('My Activity', activities_path, class: "button-link-color") %></li>
              <li class="btn btn-info mx-1"><%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "button-link-color" %></li>
            <% else %>
              <li class="btn btn-info mx-1"><%= link_to('Sign in', new_user_session_path, class: "button-link-color") %></li>
              <li class="btn btn-info mx-1"><%= link_to('Sign up', new_user_registration_path, class: "button-link-color") %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>    
    
    <div class="container">
      <p class="notice white-text"><%= notice %></p>
      <p class="alert white-text"><%= alert %></p>
    </div>
    
    <div class="wrapper">
      <%= yield %>
      <div class="push"></div>
    </div>

  </body>
  
  <footer class="page-footer footer pt-4 bg-light">
    <div class="container-fluid text-center">
      <div class="row justify-content-center">
        <div class="col-md-4">
          <ul class="list-unstyled">
            <li class="bg-light col-md footer-link">
              <a class="footer-link justify-content-center" href="https://www.instagram.com"><i class="fab fa-instagram"></i> Instagram</a>
            </li>
          </ul>
        </div>
        <div class="col-md-4">
          <ul class="list-unstyled">
            <li class="bg-light col-md footer-link">
              <a class="footer-link justify-content-center" href="https://www.instagram.com"><i class="fab fa-twitter-square footer-link"></i> Twitter</a>
            </li>
          </ul>
        </div>
        <div class="col-md-4">
          <ul class="list-unstyled">
            <li class="bg-light col-md footer-link">
              <a class="footer-link justify-content-center" href="https://www.facebook.com"><i class="fab fa-facebook-square footer-link"></i> Facebook</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
</html>
